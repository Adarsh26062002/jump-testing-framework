# API Configuration
# Base URL for the API endpoints
API_URL=http://localhost:3000/api

# Database Configuration
# PostgreSQL connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_USER=user
DB_PASSWORD=password
DB_NAME=test_db

# Logging Configuration
# Available levels: error, warn, info, debug
LOG_LEVEL=info

# Test Environment Configuration
# Indicates the current environment
TEST_ENV=test

# Test Orchestrator Configuration
# Maximum number of concurrent test executions
TEST_MAX_CONCURRENCY=10
# Global timeout in seconds for test execution
TEST_TIMEOUT_SECONDS=300

# Flow Engine Configuration
# Number of retry attempts for failed operations
FLOW_RETRY_ATTEMPTS=3
# Wait time in milliseconds between retries
FLOW_WAIT_TIME_MS=1000

# API Client Configuration
# Timeout in milliseconds for API requests
API_TIMEOUT_MS=5000
# Maximum number of API request retries
API_MAX_RETRIES=3

# Database Pool Configuration
# Maximum number of connections in the pool
DB_POOL_SIZE=10
# Connection idle timeout in milliseconds
DB_IDLE_TIMEOUT_MS=10000

# Report Generator Configuration
# Format for generated reports (html, json)
REPORT_OUTPUT_FORMAT=html
# Number of days to retain reports
REPORT_RETENTION_DAYS=30

# Security Configuration
# JWT secret key for authentication
JWT_SECRET=your_jwt_secret_here
# Token expiration time in hours
TOKEN_EXPIRY_HOURS=24

# Feature Flags
# Enable/disable detailed logging
ENABLE_DETAILED_LOGGING=true
# Enable/disable performance metrics collection
ENABLE_METRICS=true

# Note: This is an example configuration file.
# Replace these values with appropriate values for your environment.
# Do not commit actual secrets or sensitive information to version control.